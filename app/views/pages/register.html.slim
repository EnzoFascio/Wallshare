.container.d-flex.justify-content-center.align-items-center.min-vh-100
  .card.shadow-lg.rounded-4.p-5(style="max-width: 460px; width: 100%;")
    .text-center.mb-4
      h2.text-primary.fw-bold.fs-2 üìù Criar Conta
      p.text-muted.fs-6 Registre-se e compartilhe seus wallpapers favoritos

    = form_with url: "#", method: :post, local: true do |f|
      .mb-3
        = f.label :name, "Nome", class: "form-label fw-semibold"
        = f.text_field :name, class: "form-control rounded-pill shadow-sm", placeholder: "Digite seu nome"

      .mb-3
        = f.label :email, "Email", class: "form-label fw-semibold"
        = f.email_field :email, class: "form-control rounded-pill shadow-sm", placeholder: "Digite seu email"

      .mb-3
        = f.label :password, "Senha", class: "form-label fw-semibold"
        = f.password_field :password, class: "form-control rounded-pill shadow-sm", placeholder: "Crie uma senha"

      .mb-3
        = f.label :password_confirmation, "Confirmar Senha", class: "form-label fw-semibold"
        = f.password_field :password_confirmation, class: "form-control rounded-pill shadow-sm", placeholder: "Repita a senha"

      .d-grid.mt-4
        = f.submit "Registrar", class: "btn btn-success rounded-pill shadow-sm fw-bold"

    .text-center.mt-3
      p.mb-0 J√° tem conta?
      = link_to "Entrar", "/login", class: "text-decoration-none text-primary fw-semibold"
